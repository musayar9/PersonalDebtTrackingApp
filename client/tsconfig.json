{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "types": ["vite/client"], // Vite için tip desteği ekliyoruz
    "strict": true
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules"]
}
